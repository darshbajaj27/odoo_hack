{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "include": [
    "controllers/**/*.js",
    "config/**/*.js",
    "routes/**/*.js",
    "middleware/**/*.js",
    "utils/**/*.js",
    "validators/**/*.js",
    "server.js",
    "prisma/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "scripts",
    "docs",
    "logs"
  ]
}

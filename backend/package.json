{
  "name": "stockmaster-backend",
  "version": "1.0.0",
  "description": "StockMaster Backend API - Inventory Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "node prisma/seed.js",
    "db:reset": "node scripts/reset-db.sh",
    "db:backup": "node scripts/backup-db.sh",
    "db:restore": "node scripts/restore-db.sh",
    "db:seed:prod": "node scripts/seed-production.js",
    "db:sample": "node scripts/generate-sample-data.js"
  },
  "keywords": [
    "inventory",
    "stock",
    "warehouse",
    "management"
  ],
  "author": "StockMaster Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.7.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "joi": "17.11.0",
    "jsonwebtoken": "9.0.2",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "dotenv-cli": "7.3.0",
    "eslint": "8.54.0",
    "jest": "29.7.0",
    "node-notifier": "^10.0.1",
    "nodemon": "3.0.2",
    "prettier": "3.1.0",
    "prisma": "5.7.0",
    "supertest": "6.3.3"
  }
}
